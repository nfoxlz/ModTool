<UserControl x:Class="ModTool.Views.SlaveDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Run" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Command="{Binding RunCommand}"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Command="{Binding StopCommand}"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Command="{Binding AddCommand}"/>
        <TabControl Margin="0,34,0,0" ItemsSource="{Binding TabItems}" SelectedIndex="{Binding TabSelectedIndex}"/>
    </Grid>
</UserControl>
